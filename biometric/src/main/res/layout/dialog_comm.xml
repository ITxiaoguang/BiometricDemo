<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_dialog"
    android:layout_width="264dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="56dp"
    android:background="@drawable/shape_dialog_radius_8"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minHeight="26dp">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:minHeight="32dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="想要给你发送通知" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="打开通知取设备打开通知取设备" />

    <LinearLayout
        android:id="@+id/ll_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="34dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_common_second_radius_6"
            android:gravity="center"
            android:minHeight="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="不启用" />

        <Space
            android:id="@+id/v_weight"
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_common_radius_6"
            android:gravity="center"
            android:minHeight="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@drawable/selector_common_text_white"
            android:textSize="14sp"
            tools:text="启用" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="34dp">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/selector_common_radius_6"
            android:gravity="center"
            android:minHeight="40dp"
            android:padding="10dp"
            android:textColor="@drawable/selector_common_text_white"
            android:textSize="14sp"
            tools:text="YES" />

        <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/selector_common_second_radius_6"
            android:gravity="center"
            android:minHeight="40dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="NO" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="22dp">

        <TextView
            android:id="@+id/tv_tip_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/selector_common_radius_6"
            android:gravity="center"
            android:minHeight="40dp"
            android:padding="10dp"
            android:textColor="@drawable/selector_common_text_white"
            android:textSize="14sp"
            tools:text="YES" />

        <TextView
            android:id="@+id/tv_tip_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="3s之后自动进入" />

    </LinearLayout>

</LinearLayout>